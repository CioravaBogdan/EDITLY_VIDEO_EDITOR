{
  "editSpec": {
    "width": 1024,
    "height": 1536,
    "fps": 30,
    "outFormat": "mp4",
    "fast": true,
    "keepSourceAudio": true,
    "audioCodec": "aac",
    "videoBitrate": "3000k",
    "audioBitrate": "128k",
    "defaults": {
      "transition": null
    },
    "customOutputArgs": [
      "-preset", "fast",
      "-movflags", "+faststart",
      "-pix_fmt", "yuv420p"
    ],
    "clips": [
      {
        "duration": 8,
        "layers": [
          {
            "type": "image",
            "path": "/app/files/page1.png",
            "resizeMode": "cover"
          },
          {
            "type": "audio",
            "path": "/app/files/audio1.mp3",
            "mixVolume": 1.0
          }
        ]
      },
      {
        "duration": 8,
        "layers": [
          {
            "type": "image",
            "path": "/app/files/page2.png",
            "resizeMode": "cover"
          },
          {
            "type": "audio",
            "path": "/app/files/audio2.mp3",
            "mixVolume": 1.0
          }
        ]
      }
    ]
  },
  "outputFilename": "carte_digitala_example.mp4"
}
